<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ertugrul.attendancewithfacerecognition.Menu">
    <androidx.appcompat.widget.Toolbar
        style="@style/ToolBarStyle.Event"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="@dimen/abc_action_bar_default_height_material">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:id="@+id/toolbar_title"
                android:textColor="#fff"
                android:textSize="26sp"
                android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class"
                android:id="@+id/toolbar_subtitle"
                android:textColor="#fff"
                android:textSize="10sp"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noStudentsFoundText"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:text="No Students Found.\n\nClick on the menu icon to the top right and click Edit Students to refresh this list."
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">
        <fragment
            android:id="@+id/viewAttendanceFragment"
            android:name="com.ertugrul.attendancewithfacerecognition.ViewAttendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/content_view_attendance" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/takeAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_add_a_photo_white_24dp"
            app:layout_anchor="@id/takeAttendance"
            app:layout_anchorGravity="top"
            android:layout_margin="16dp"
            android:tooltipText="Take Attendance"/>

    </FrameLayout>



</LinearLayout>
